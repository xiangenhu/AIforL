# Application settings
PORT=3000
NODE_ENV=development

# LLM API keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM settings
DEFAULT_LLM_PROVIDER=openai  # Options: openai, anthropic
OPENAI_MODEL=gpt-4
ANTHROPIC_MODEL=claude-3-opus-20240229

# Debugging settings
DEBUG_MODE=false            # Set to 'true' to enable debugging
DEBUG_VERBOSE=false         # Set to 'true' for verbose debugging output
DEBUG_LLM_REQUESTS=false    # Set to 'true' to log LLM requests
DEBUG_LLM_RESPONSES=false   # Set to 'true' to log LLM responses
